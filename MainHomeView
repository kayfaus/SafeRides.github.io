                }
                .padding()

                NavigationLink(destination: RequestRideView()) {
                    Text("Request a Ride")
                        .foregroundColor(.pink)
                        .padding()
                        .background(Color.white)
                        .cornerRadius(10)
                }
                .padding()

                NavigationLink(destination: BecomeDriverView()) {
                    Text("Become a Driver")
                        .foregroundColor(.pink)
                        .padding()
                        .background(Color.white)
                        .cornerRadius(10)
                }
                .padding()

                NavigationLink(destination: SettingsView()) {
                    Text("Settings")
                        .foregroundColor(.pink)
                        .padding()
                        .background(Color.white)
                        .cornerRadius(10)
                }
                .padding()

                // New: Learn More Button
                NavigationLink(destination: OverviewView()) {
                    Text("Learn More")
                        .foregroundColor(.pink)
                        .padding()
                        .background(Color.white)
                        .cornerRadius(10)
                }
                .padding()

                Spacer()
            }
            .padding()
